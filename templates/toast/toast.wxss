.self-wetoast {
    width: 100%;
    display: none;
}

.self-wetoast.show {
    width: 100%;    
    display: block;
}

.self-wetoast .toast-wrap {
    position: fixed;    
    display: flex;
    width: 100%;
    top: 50%;
    transform: translateY(-100rpx);    
}

.self-wetoast .toast-mask {
    position: fixed;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    z-index: 100;
}

.self-wetoast .toast-content-wrap {
    z-index: 110;
    height: 100rpx;
    padding: 0 72rpx;
    text-align: center;
    background: rgba(0, 0, 0, .6);
    color: #fff;
    font-size: 32rpx;
    border-radius: 12rpx;
    line-height: 100rpx;
    opacity: 0;
    margin: 0 auto;
}